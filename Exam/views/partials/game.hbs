<div class="game">
    <div class="game-img">
        <img src="{{imageUrl}}">
    </div>
    <div class="game-info">
        <h1>{{name}}</h1>
        <p><span>Platform: {{platform}}</span></p>
        <p><span>Genre: {{gerne}}</span></p>
        <p><span>Price: ${{price}}</span></p>
    </div>

    <a href="/game/{{_id}}" class="btn-details">Details</a>
</div>