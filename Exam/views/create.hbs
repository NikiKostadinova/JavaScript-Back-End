<main id="create">
    {{#if errors}}
    <div>
        <div class="errorContainer">
            {{#each errors}}
            <p>{{this}}</p>
        </div>
        {{/each}}
    </div>
    {{/if}}
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form action="/game/create" method="post">
                <label for="platform">Platform:</label>
                <select id="platform" name="">
                    <option value="">-------</option>
                    <option value="PC">PC</option>
                    <option value="Nintendo">Nintendo</option>
                    <option value="PS4">PS4</option>
                    <option value="PS5">PS5</option>
                    <option value="XBOX">XBOX</option>
                </select>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="{{body.name}}">
                <label for="imageUrl">Image:</label>
                <input type="text" id="imageUrl" name="imageUrl" placeholder="http://..." value="{{body.imageUrl}}">
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" value="{{body.price}}">
                <label for="genre">Genre:</label>
                <input type="text" id="genre" name="genre" value="{{body.genre}}">
                <label for="description">Description:</label>
                <textarea id="description" name="description"></textarea>

                <input type="submit" id="btn" value="CREATE">{{body.description}}</input>
            </form>
        </div>
    </section>
</main>